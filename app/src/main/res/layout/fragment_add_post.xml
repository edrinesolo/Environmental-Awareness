<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.bonaparte.drawermenu.AddPostActivityFragment"
    tools:showIn="@layout/activity_sensitise">


    <EditText
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_event_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint=" Description"

        android:padding="10dp"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/post_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:text="SENSITISE"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Post_title"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/picked_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:background="@android:color/transparent"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/add_pic"
        android:text="Add image"
        tools:ignore="ContentDescription"
        android:cropToPadding="false" />

</RelativeLayout>
